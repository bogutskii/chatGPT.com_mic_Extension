{
  "manifest_version": 3,
  "name": "Voice to Text for ChatGPT",
  "version": "1.0",
  "description": "Adds a voice-to-text button to ChatGPT input field.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["img/mic_OFF.png", "img/mic_ON.png", "img/mic_ERR.png", "img/options.png", "img/clear.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
